{
  "name": "molecular-dynamics-visualization",
  "version": "1.0.0",
  "description": "A molecular dynamics visualization app for physical chemistry education",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "lint:check": "eslint src --ext .js,.jsx --max-warnings 0",
    "performance": "lhci autorun",
    "performance:collect": "lhci collect",
    "performance:assert": "lhci assert",
    "quality:check": "npm run lint:check && npm run test && npm run test:e2e",
    "quality:fix": "npm run lint:fix"
  },
  "keywords": [
    "chemistry",
    "molecular dynamics",
    "visualization",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@react-three/drei": "^10.6.1",
    "@react-three/fiber": "^9.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
